<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="2sp" >

    <Button
        android:id="@+id/button_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2sp"
        android:text="@string/close"
        android:textSize="14sp"
        android:autoSizeMaxTextSize="18sp"
        android:textColor="@color/dialogText"
        android:background="@color/transparent"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textColor="@color/dialogText"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_close"/>

    <TextView
        android:id="@+id/dialog_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_title"
        android:text="@string/placeholder"
        android:textSize="18sp"
        android:linksClickable="true"
        android:layout_margin="8dp"
        android:textAlignment="center"
        android:autoLink="web"
        />

    <ImageView
        android:id="@+id/dialog_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8sp"
        android:contentDescription="@string/todo"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/dialog_body"/>

    <TextView
        android:id="@+id/dialog_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_image"
        android:text="@string/source_github"
        android:linksClickable="true"
        android:layout_margin="22dp"
        android:autoLink="web"
    />
    <TextView
        android:id="@+id/dialog_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_source"
        android:text="@string/email"
        android:linksClickable="true"
        android:layout_margin="22dp"
        android:autoLink="email"
        />

</RelativeLayout>

