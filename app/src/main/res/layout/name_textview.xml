<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/name_recycler_border"
    android:layout_marginTop="2sp"
    android:layout_marginBottom="22sp"
    android:layout_marginLeft="12sp"
    android:layout_marginRight="12sp"
    android:orientation="vertical"
    android:stretchColumns="*">

    <TableRow>
        <TextView
            android:id="@+id/name_name"
            android:layout_height="wrap_content"
            android:layout_margin="2sp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_span="3" />
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/address_str"
            android:text="@string/address"
            android:layout_height="wrap_content"
            android:layout_margin="2sp" />
        <TextView
            android:id="@+id/name_address"
            android:layout_height="wrap_content"
            android:layout_margin="2sp"
            android:layout_span="2"/>
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/born_str"
            android:text="@string/born"
            android:layout_height="wrap_content"
            android:layout_margin="2sp" />
        <TextView
            android:id="@+id/name_born"
            android:layout_height="wrap_content"
            android:layout_margin="2sp"
            android:layout_span="2"/>
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/death_str"
            android:text="@string/death"
            android:layout_height="wrap_content"
            android:layout_margin="2sp" />
        <TextView
            android:id="@+id/name_death"
            android:layout_height="wrap_content"
            android:layout_margin="2sp"
            android:layout_span="2"/>
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/installed_str"
            android:text="@string/installed"
            android:layout_height="wrap_content"
            android:layout_margin="2sp" />
        <TextView
            android:id="@+id/name_installed"
            android:layout_height="wrap_content"
            android:layout_margin="2sp"
            android:layout_span="2"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/name_button_bio"
            android:text="@string/bio"
            android:layout_width="wrap_content"
            android:layout_marginLeft="6sp"
            android:layout_marginRight="6sp"
            style="?android:attr/buttonBarButtonStyle" />
        <Button
            android:id="@+id/name_button_foto"
            android:text="@string/foto"
            android:layout_width="wrap_content"
            android:layout_marginLeft="6sp"
            android:layout_marginRight="6sp"
            style="?android:attr/buttonBarButtonStyle" />
        <Button
            android:id="@+id/name_button_geopoint"
            android:text="@string/map"
            android:layout_width="wrap_content"
            android:layout_marginLeft="6sp"
            android:layout_marginRight="6sp"
            style="?android:attr/buttonBarButtonStyle" />
    </TableRow>
</TableLayout>