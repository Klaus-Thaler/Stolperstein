<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2sp">

    <Button
        android:id="@+id/button_close"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_margin="2sp"
        android:text="@string/close"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="8sp"
        app:autoSizeMaxTextSize="18sp"
        app:autoSizeStepGranularity="1sp"
        android:textColor="@color/dialogText"
        android:layout_alignParentEnd="true"
        android:background="@color/transparent"/>

    <TextView
        android:id="@+id/location_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8sp"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textColor="@color/dialogText"
        android:text="@string/location"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_close"/>

    <TextView
        android:id="@+id/location_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8sp"
        android:textSize="16sp"
        android:textColor="@color/dialogText"
        android:text="@string/m_chtest_du_den_standort_ermitteln"
        android:layout_below="@+id/location_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@+id/location_content" >

        <Button
            android:id="@+id/button_yes"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_margin="8sp"
            android:gravity="center|center_vertical"
            android:text="@string/follow"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeMaxTextSize="18sp"
            app:autoSizeStepGranularity="1sp"
            app:shapeAppearanceOverlay="@style/leaf"
            style="?android:attr/buttonCornerRadius" />

        <Button
            android:id="@+id/button_no"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_margin="8sp"
            android:gravity="center|center_vertical"
            android:text="@string/nofollow"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeMaxTextSize="18sp"
            app:autoSizeStepGranularity="1sp"
            app:shapeAppearanceOverlay="@style/leaf"
            style="?android:attr/buttonCornerRadius" />
    </LinearLayout>

</RelativeLayout>